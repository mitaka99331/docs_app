{% extends 'base.html.twig' %}

{% block body %}
    <div class="card w-25 m-auto mt-5">
        <div class="card-header">Login page</div>
        <div class="card-body">
            <form method="post">
                <div class="d-flex flex-column align-items-center">
                    <div class="card-body">
                        <div class="form-group ">
                            <label class="form-col-form-label" for="username">Username</label>
                            <input class="form-control" name="username" id="username" type="text" required>
                        </div>

                        <div class="form-group mt-4 ">
                            <label class="form-col-form-label" for="pass">Password</label>
                            <input class="form-control" type="password" name="password" id="pass" required>
                        </div>
                    </div>
                    <input type="hidden" name="csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <button class="btn btn-lg  btn-primary mt-3 m-auto" type="submit">Login</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}



